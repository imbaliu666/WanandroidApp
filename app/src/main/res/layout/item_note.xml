<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">
    <com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/v_home_swip"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:clickable="true"
        android:paddingBottom="1dp"
        app:ios="false"
        app:leftSwipe="true"
        app:swipeEnable="true"
        android:focusable="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        >

        <TextView
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="fasd"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/item_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:text="111"
            android:id="@+id/item_main_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:text="111"
            android:paddingRight="5dp"
            android:id="@+id/item_main_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_main_author"/>



    </android.support.constraint.ConstraintLayout>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="55.2dp"
            android:layout_height="70dp"
            android:background="@color/red_249109109"
            android:text="删除"
            android:textColor="@color/white_255255255"
            android:textSize="11dp" />
    </com.mcxtzhang.swipemenulib.SwipeMenuLayout>
</android.support.v7.widget.CardView>